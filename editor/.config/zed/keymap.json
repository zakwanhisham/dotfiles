// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "EmptyPane",
    "bindings": {
      "-": "project_panel::ToggleFocus",
      "space f f": "file_finder::Toggle",
      "space f o": "workspace::Open",
      "space f p": "projects::OpenRecent",
      "ctrl-w": null,
      // Git stuff
      "shift-p": "git::Push",
      "p": "git::Pull",
    },
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-w": null,
      // File Explorer
      "-": "project_panel::ToggleFocus",
      // LSP
      "g r f": "editor::Format",
      // Fuzzy
      "space f f": "file_finder::Toggle",
      "space f o": "workspace::Open",
      "space f p": "projects::OpenRecent",
      "space f s": "pane::DeploySearch",
      "space space": "tab_switcher::ToggleAll",
      // Git
      "space g b": "git::Blame",
      "space g g": "git::Diff",
      "space g l": "editor::ToggleGitBlameInline",
      "space g s": "git::Switch",
      // Resize
      "ctrl-left": "vim::ResizePaneLeft",
      "ctrl-down": "vim::ResizePaneDown",
      "ctrl-up": "vim::ResizePaneUp",
      "ctrl-right": "vim::ResizePaneRight",
      // Movement
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      // Zoom
      "space z": "workspace::ToggleZoom",
    },
  },
  {
    "context": "Editor && VimControl",
    "bindings": {
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
      "alt-h": "editor::Outdent",
      "alt-l": "editor::Indent",
    },
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "q": "workspace::ToggleLeftDock",
    },
  },
  {
    "context": "TabSwitcher || (TabSwitcher > Picker > Editor)",
    "bindings": {
      "ctrl-x": "tab_switcher::CloseSelectedItem",
    },
  },
  {
    "context": "FileFinder || (FileFinder > Picker > Editor)",
    "bindings": {
      "ctrl-w": "file_finder::ToggleSplitMenu",
    },
  },
  {
    "context": "FileFinder || (FileFinder > Picker > Editor) || (FileFinder > Picker > menu)",
    "bindings": {
      "ctrl-j": "pane::SplitDown",
      "ctrl-k": "pane::SplitUp",
      "ctrl-h": "pane::SplitLeft",
      "ctrl-l": "pane::SplitRight",
    },
  },
  {
    "context": "GitDiff > Editor",
    "bindings": {
      "s": "git::StageAndNext",
      "u": "git::UnstageAndNext",
      "shift-s": "git::StageAll",
      "shift-u": "git::UnstageAll",
      "c c": "git::Commit",
      "x": "git::Restore",
    },
  },
  {
    "context": "GitDiff",
    "bindings": {
      "shift-p": "git::Push",
      "p": "git::Pull",
    },
  },
  {
    "context": "GitBranchSelector || (GitBranchSelector > Picker > Editor)",
    "bindings": {
      "ctrl-x": "branch_picker::DeleteBranch",
      "ctrl-/": "branch_picker::FilterRemotes",
    },
  },
  {
    "context": "Editor && extension == md",
    "bindings": {
      "space m p": "markdown::OpenPreviewToTheSide",
    },
  },
]
